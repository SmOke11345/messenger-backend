generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int       @id @default(autoincrement())
  name        String
  lastname    String?
  password    String
  profile_img String?
  email       String
  friends     Friends[]
}

model Friends {
  id        Int   @id @default(autoincrement())
  friend_id Int
  friend    Users @relation(fields: [friend_id], references: [id])
}
